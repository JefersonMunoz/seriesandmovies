@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@if (!Model.EstaLogueado)
{
    <div class="container mt-5" style="max-width: 420px;">
        <div class="p-4 bg-white shadow-lg rounded-4">
            <h3 class="text-center text-primary mb-4">Iniciar sesión</h3>

            <form method="POST">

                <div class="form-floating mb-3">
                    <input class="form-control rounded-3"
                           asp-for="@Model.Username"
                           onchange="keyUp(this)"
                           placeholder="Usuario">
                    <label>Usuario</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password"
                           class="form-control rounded-3"
                           asp-for="@Model.Password"
                           onchange="keyUp(this)"
                           placeholder="Contraseña">
                    <label>Contraseña</label>
                </div>

                <div class="d-grid gap-2">
                    <button asp-page-handler="BtEnter"
                            class="btn btn-primary rounded-pill">
                        Entrar
                    </button>

                    <button asp-page-handler="BtClean"
                            class="btn btn-outline-secondary rounded-pill">
                        Limpiar
                    </button>
                </div>

            </form>
        </div>
    </div>
}
else
{
    var UserName = HttpContext.Session.GetString("Usuario");

    <div class="bienvenido">
        <span class="text-primary fw-bold me-3">Bienvenido @UserName</span>

        <form method="POST" class="d-inline">
            <button type="submit"
                    value="Cerrar"
                    asp-page-handler="BtClose"
                    class="btn btn-outline-danger"
                    class="btn btn-default">
                Cerrar
            </button>
        </form>
    </div>

    <div class="firstMessage">
        <span class="text-primary fw-bold me-3">Bienvenido a tu plataforma de series y películas favorita</span>
    </div>

}
