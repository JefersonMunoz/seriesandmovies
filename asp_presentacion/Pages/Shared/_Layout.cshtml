@{
    var userRole = @Context.Session.GetString("Rol");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - asp_presentacion</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_presentacion.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Series y películas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="dropdownContenido" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Series y Películas
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownContenido">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Contents">Contenido</a> </li>
                                    @if (userRole == "Admin")
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/AudioTracks">Audios*</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/ContentGenres">Contenido de generos</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/ContentTypes">Tipo de contenido</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Countries">Ciudades</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Credits">Créditos</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Episodes">Episodios</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/GenreTypes">Tipos de genero</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Languages">Lenguajes</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Persons">Personas</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/PersonTypeRoles">Rol por persona</a> </li>
                                }
                                <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Plans">Planes</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Reviews">Reseñas</a> </li>
                                    @if (userRole == "Admin")
                                        {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/RoleTypes">Tipo de rol</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Seasons">Capítulos</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Studios">Estudios</a> </li>
                                        }
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Subscriptions">Suscripciones</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Subtitles">Subtítlos</a> </li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Ventanas/Watchlists">Lista de reproducción</a> </li>
                                </ul>
                            </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - asp_presentacion - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
