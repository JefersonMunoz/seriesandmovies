@page
@model asp_presentacion.Pages.Ventanas.ContentsModel
@{
    ViewData["Titulo"] = "";
    var userRole = HttpContext.Session.GetString("Rol");
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            <div align="left">
                <h3>Contents</h3>
            </div>

            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                       @if (userRole == "Admin")
                {
                    <input type="submit"
                    value="Nuevo"
                    asp-page-handler="BtNuevo"
                    class="btn btn-secondary"
                    disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                    <input type="submit"
                    value="Guardar"
                    asp-page-handler="BtGuardar"
                    class="btn btn-secondary"
                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                    <input type="submit"
                    value="Cancelar"
                    asp-page-handler="BtCancelar"
                    class="btn btn-secondary"
                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                }
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Name" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Description" />
                <input type="hidden"
                       asp-for="@Model.Actual!._ContentType.Name" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Year" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">

                    <h3>Contenidos</h3>

                    <h3>Contenido</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmName"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Descripcion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmDescription"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Description" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Tipo
                            </label>
                            <div class="col-lg-6">
                                <select id="nmContentType"
                                        class="cts_forms form-control"
                                        asp-for="Actual.ContentType"
                                        asp-items="@(new SelectList(Model.ListaContentTypes, "Id", "Name"))">
                                    <option value="">-- Seleccionar Tipo --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Idioma
                            </label>
                            <div class="col-lg-6">
                                <select id="nmLanguage"
                                        class="cts_forms form-control"
                                        asp-for="Actual.Language"
                                        asp-items="@(new SelectList(Model.ListaLanguages, "Id", "Name"))">
                                    <option value="">-- Seleccionar Idioma --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Studio
                            </label>
                            <div class="col-lg-6">
                                <select id="nmStudio"
                                        class="cts_forms form-control"
                                        asp-for="Actual.Studio"
                                        asp-items="@(new SelectList(Model.ListaStudios, "Id", "Name"))">
                                    <option value="">-- Seleccionar Studio --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Año
                            </label>
                            <div class="col-lg-6">
                                <input id="nmYear"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Year" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml");
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>
                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Name
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flDescription"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Description"
                       placeholder="Description" />
                <br />

                <select id="flContentType"
                        class="cts_forms form-control"
                        asp-for="@Model.Filtro!.ContentType"
                        asp-items="@(new SelectList(Model.ListaContentTypes, "Id", "Name"))">
                    <option value="0">-- Seleccionar Tipo --</option>
                </select>
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered tablehover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Descripcion
                            </th>
                            <th class="cl_hidden">
                                Tipo
                            </th>
                            <th class="cl_hidden">
                                Año
                            </th>
    @if (userRole == "Admin")
    {
                            <th class="cl_actions">
                                Accion
                            </th>
    }
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Name
                                    </td>
                                    <td>
                                        @elemento.Description
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._ContentType.Name
                                    </td>
                                    <td>
                                        @elemento.Year
                                    </td>

            @if (userRole == "Admin")
                                    {

                                        <td>
                                            <div class="d-flex align-items-center">
                                                <button type="submit"
                                                asp-page-handler="BtModificar"
                                                asp-route-data="@elemento.Id"
                                                name="bt"
                                                value="Editar"
                                                class="btn btn-link p-0"
                                                title="Editar">
                                                    <i class="material-icons text-primary">&#xE254;</i>
                                                </button>

                                                <button type="submit"
                                                asp-page-handler="BtBorrarVal"
                                                asp-route-data="@elemento.Id"
                                                name="bt"
                                                value="Borrar"
                                                class="btn btn-link p-0"
                                                title="Eliminar">
                                                    <i class="material-icons text-danger">&#xE872;</i>
                                                </button>
                                            </div>
                                        </td>
                                    }

                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>